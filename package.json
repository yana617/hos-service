{
  "name": "house-of-souls-api",
  "version": "1.0.0",
  "description": "NodeJS pre-configured project",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "dev:docker": "docker compose up --build",
    "test": "jest --coverage --verbose --runInBand",
    "test:docker": "chmod +x ./bin/test.sh && NODE_ENV=test ./bin/test.sh",
    "lint": "node_modules/.bin/eslint ."
  },
  "keywords": [
    "docker"
  ],
  "author": "Yana Sidorova",
  "license": "ISC",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/fixtures/setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/models/"
    ],
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    }
  },
  "dependencies": {
    "axios": "1.12.0",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-validator": "6.12.1",
    "js-yaml": "4.1.0",
    "mongoose": "6.13.8",
    "morgan": "1.10.0",
    "socket.io": "4.8.1",
    "supertest": "6.3.4",
    "swagger-ui-express": "4.3.0"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-plugin-import": "2.23.4",
    "faker": "5.5.3",
    "jest": "27.0.6",
    "nock": "13.5.4",
    "nodemon": "3.1.9",
    "supertest": "6.1.4",
    "uuid": "10.0.0"
  }
}
